<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:background="@color/background_color_on_item"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            style="image"
            android:id="@+id/adapter_stream_product_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true" />


        <TextView
            android:layout_below="@id/adapter_stream_product_image"
            android:layout_marginBottom="12dp"
            android:id="@+id/adapter_stream_product_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="title is here it is about"
            android:textColor="@color/gray"
            android:textSize="12sp" />

        <TextView
            android:layout_below="@id/adapter_stream_product_title"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:id="@+id/adapter_stream_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Narx: 0 so'm"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_below="@id/adapter_stream_product_title"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:id="@+id/adapter_stream_product_bonus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Bonus: 290000 so'm"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/adapter_stream_product_remained"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Qoldi: 0 ta"
                android:textColor="@color/gray"
                android:textSize="11sp"
                android:layout_marginRight="4dp"
                />

            <TextView
                android:gravity="right"
                android:layout_marginLeft="4dp"
                android:id="@+id/adapter_stream_product_marja"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Marja: 0 ta"
                android:textColor="@color/gray"
                android:textSize="11sp"/>
        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="8dp"
            app:backgroundTint="@color/light_blue"
            android:id="@+id/adapter_stream_product_ad_tg"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="@string/reklama_posti"
            android:textSize="9sp"
            app:icon="@drawable/ic_telegram"
            app:iconSize="16dp"
            app:iconGravity="textEnd" />


        <com.google.android.material.button.MaterialButton
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="8dp"
            app:backgroundTint="@color/colorAccent"
            android:id="@+id/adapter_stream_product_stream"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="@string/oqim_yaratish"
            android:textSize="9sp"
            app:icon="@drawable/ic_baseline_add_link_24"
            app:iconSize="18dp"
            app:iconGravity="textEnd" />


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>