<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background_color"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        layout="@layout/custom_toolbar"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="12dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_marginRight="6dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:id="@+id/profile_main_balance_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/rounded_image_bg"
                            android:padding="10dp"
                            android:src="@drawable/ic_wallet"
                            app:tint="@color/white" />

                        <TextView
                            android:layout_marginTop="12dp"
                            android:id="@+id/profile_main_balance_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0 so'm"
                            android:textColor="@color/colorSecondary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_marginTop="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Asosiy Balans"
                            android:textColor="@color/gray"
                            android:textSize="12sp" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="6dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:id="@+id/profile_hold_balance_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/rounded_image_bg"
                            android:padding="8dp"
                            android:src="@drawable/ic_waiting_money"
                            app:tint="@color/white" />

                        <TextView
                            android:layout_marginTop="12dp"
                            android:id="@+id/profile_hold_balance_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0 so'm"
                            android:textColor="@color/colorSecondary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_marginTop="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/hold_balans"
                            android:textColor="@color/gray"
                            android:textSize="12sp" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_marginRight="6dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:id="@+id/profile_marja_balance_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/rounded_image_bg"
                            android:padding="10dp"
                            android:src="@drawable/ic_card"
                            app:tint="@color/white" />

                        <TextView
                            android:layout_marginTop="12dp"
                            android:id="@+id/profile_marja_balance_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0 ta"
                            android:textColor="@color/colorSecondary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_marginTop="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/marja_balans"
                            android:textColor="@color/gray"
                            android:textSize="12sp" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="6dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:id="@+id/profile_sold_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/rounded_image_bg"
                            android:padding="8dp"
                            android:src="@drawable/ic_payment"
                            app:tint="@color/white" />

                        <TextView
                            android:layout_marginTop="12dp"
                            android:id="@+id/profile_sold_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0 ta"
                            android:textColor="@color/colorSecondary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_marginTop="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/siz_sotdingiz"
                            android:textColor="@color/gray"
                            android:textSize="12sp" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <com.github.mikephil.charting.charts.PieChart
                android:layout_marginTop="16dp"
                android:id="@+id/profile_pieChart"
                android:layout_width="match_parent"
                android:layout_height="800dp"/>


        </LinearLayout>


    </ScrollView>

</LinearLayout>